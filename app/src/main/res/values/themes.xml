<resources>

    <style name="Theme.MarelySpoon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
    </style>

    <style name="titleTextAppearance">
        <item name="android:textSize">@dimen/font_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="amountTextAppearance">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="primaryTextAppearance">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="headerTextAppearance">
        <item name="android:textSize">@dimen/font_size_xmedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="detailsTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_size_xxmedium</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

</resources>